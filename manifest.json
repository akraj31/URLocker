{
    "manifest_version": 2,
    "name": "URLocker",
    "version": "0.1",
    "content_scripts": [
        {
          "matches": [
            "https://www.google.com/*",
            "https://www.facebook.com/*"
          ],
          "js": ["js/jquery-1.11.3.min.js", "js/content.js"]
        }
    ],
    "browser_action": {
        "default_icon": "img/icon.png",
        "default_popup": "popup.html"
    },

    "background": {
        "scripts": ["js/background.js"]
    },
    "permissions": [
        "activeTab",
        "tabs",
	    "background",
        "webRequest"
    ]
}