{
    "manifest_version": 2,
    "name": "URLocker",
    "version": "0.1",
    "content_scripts": [
        {
          "matches": [
            "<all_urls>"
          ],
          "js": ["js/content.js"]
        }
    ],
    "browser_action": {
        "default_icon": "img/icon.png",
        "default_popup": "menu.html"
    },

    "background": {
        "scripts": ["js/background.js"],
        "persistent": true
    },
    "permissions": [
        "activeTab",
        "storage",
		"unlimitedStorage",
        "tabs",
	    "background",
        "webRequest"
    ],

    "content_security_policy": "script-src 'self' https://ssl.google-analytics.com/ga.js https://example.cc; object-src 'self'"

}